{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run LifeLine app",
			"type": "shell",
			"command": "$env:FLASK_DEBUG=\"0\"; $env:OPENWEATHER_API_KEY=\"$env:OPENWEATHER_API_KEY\"; $env:DEFAULT_LAT=\"23.8103\"; $env:DEFAULT_LNG=\"90.4125\"; .\\.venv\\Scripts\\python.exe app.py"
		},
		{
			"label": "Run LifeLine app (minimal)",
			"type": "shell",
			"command": "$ErrorActionPreference='SilentlyContinue'; taskkill /F /IM python.exe /IM python3.13.exe | Out-Null; $ErrorActionPreference='Continue'; $env:FLASK_DEBUG=\"0\"; $env:DEFAULT_LAT=\"23.8103\"; $env:DEFAULT_LNG=\"90.4125\"; $env:SUGGESTION_RADIUS_KM=\"10\"; .\\.venv\\Scripts\\python.exe app.py"
		},
		{
			"label": "Restart LifeLine app",
			"type": "shell",
			"command": "$ErrorActionPreference='SilentlyContinue'; taskkill /F /IM python.exe /IM python3.13.exe | Out-Null; $ErrorActionPreference='Continue'; $env:FLASK_DEBUG=\"0\"; .\\.venv\\Scripts\\python.exe app.py"
		},
		{
			"label": "Restart LifeLine app with weather",
			"type": "shell",
			"command": "$ErrorActionPreference='SilentlyContinue'; taskkill /F /IM python.exe /IM python3.13.exe | Out-Null; $ErrorActionPreference='Continue'; $env:OPENWEATHER_API_KEY=$env:OPENWEATHER_API_KEY; $env:FLASK_DEBUG=\"0\"; .\\.venv\\Scripts\\python.exe app.py"
		},
		{
			"label": "Restart LifeLine app (apply explanation change)",
			"type": "shell",
			"command": "$ErrorActionPreference='SilentlyContinue'; taskkill /F /IM python.exe /IM python3.13.exe | Out-Null; $ErrorActionPreference='Continue'; $env:FLASK_DEBUG=\"0\"; $env:DEFAULT_LAT=\"23.8103\"; $env:DEFAULT_LNG=\"90.4125\"; $env:SUGGESTION_RADIUS_KM=\"10\"; .\\.venv\\Scripts\\python.exe app.py"
		}
	]
}